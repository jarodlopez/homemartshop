---
interface Props {
	title: string;
}

const { title } = Astro.props;
import '../app.css'; // Asegúrate de tener Tailwind aquí o en global
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="HomeMart Ecommerce" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body class="bg-gray-50 text-gray-900 font-sans">
		<slot />
	</body>
</html>
